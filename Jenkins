pipeline {
    agent any

    environment {
        IMAGE_NAME = "static-website"
        IMAGE_TAG  = "latest"
        REGISTRY   = "abhishek0000111" // Replace with your Docker Hub username
        KUBE_CONFIG = credentials('kubeconfig-cred-id') // Jenkins credential ID for kubeconfig
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Abhishek1234anand/static-website.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    bat "docker build -t ${REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    echo 'Pushing image to Docker Hub...'
                    bat "docker login -u ${REGISTRY} -p ${DOCKERHUB_PASSWORD}"
                    bat "docker push ${REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([file(credentialsId: 'kubeconfig-cred-id', variable: 'KUBECONFIG')]) {
                    script {
                        echo 'Deploying to Kubernetes...'
                        bat 'kubectl apply -f k8s/deployment.yaml'
                        bat 'kubectl apply -f k8s/service.yaml'
                    }
                }
            }
        }
    }
}
