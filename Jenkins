pipeline {
    agent any

    environment {
        IMAGE_NAME = "static-website"
        IMAGE_TAG  = "01"
        REGISTRY   = "abhishek0000111"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout([$class: 'GitSCM',
                  branches: [[name: '*/main']],
                  userRemoteConfigs: [[
                    url: 'https://github.com/Abhishek1234anand/static-website.git',
                    credentialsId: 'github-cred-id'
                  ]]
                ])
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    bat "docker build -t %REGISTRY%/%IMAGE_NAME%:%IMAGE_TAG% ."
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'jenkins-pipeline-token', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                    script {
                        echo 'Pushing image to Docker Hub...'
                        bat "docker login -u %DOCKERHUB_USER% -p %DOCKERHUB_PASS%"
                        bat "docker push %REGISTRY%/%IMAGE_NAME%:%IMAGE_TAG%"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([file(credentialsId: 'kubeconfig-cred-id', variable: 'KUBECONFIG')]) {
                    script {
                        echo 'Deploying to Kubernetes...'
                        bat 'kubectl apply -f k8s/deployment.yaml'
                        bat 'kubectl apply -f k8s/service.yaml'
                    }
                }
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline completed successfully!'
        }
        failure {
            echo '❌ Pipeline failed. Check logs for details.'
        }
    }
}
