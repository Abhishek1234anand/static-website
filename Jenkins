pipeline {
    agent any

    environment {
        IMAGE_NAME = ""
        IMAGE_TAG = "01"
        KUBE_DEPLOY_YAML = "K8.yml"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }

        stage('Push to Local Registry or Docker Hub') {
            steps {
                script {
                    // Replace with your registry if needed
                    // sh "docker tag ${IMAGE_NAME}:${IMAGE_TAG} abhishek0000111/${IMAGE_NAME}:${IMAGE_TAG}"
                    // sh "docker push your-registry/${IMAGE_NAME}:${IMAGE_TAG}"
                    echo "Skipping push for local testing"
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh "kubectl apply -f ${KUBE_DEPLOY_YAML}"
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful!"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
