pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Abhishek1234anand/static-website.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    bat 'docker build -t static-website:latest .'
                }
            }
        }

        stage('Run Website in Docker') {
            steps {
                script {
                    echo 'Running website on port 8085...'
                    bat 'docker run -d -p 8086:8086 static-website:latest'
                }
            }
        }
    }
}
