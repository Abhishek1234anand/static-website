pipeline {
    agent any

    environment {
        IMAGE_NAME = "static-website"
        IMAGE_TAG = "01"
        DOCKER_REGISTRY = "abhishek0000111"
        KUBE_DEPLOY_YAML = "K8.yml"
    }

    stages {
        stage('Clone GitHub Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Abhishek1234anand/static-website.git'
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'jenkins-pipeline-token', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    bat "docker login -u %DOCKER_USER% -p %DOCKER_PASS%"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                bat "docker build -t %IMAGE_NAME%:%IMAGE_TAG% ."
            }
        }

        stage('Tag and Push Docker Image') {
            steps {
                bat "docker tag %IMAGE_NAME%:%IMAGE_TAG% %DOCKER_REGISTRY%/%IMAGE_NAME%:%IMAGE_TAG%"
                bat "docker push %DOCKER_REGISTRY%/%IMAGE_NAME%:%IMAGE_TAG%"
            }
        }

        stage('Configure Kubeconfig') {
            steps {
                withCredentials([file(credentialsId: 'minikube-kubeconfig', variable: 'KUBECONFIG_PATH')]) {
                    bat "set KUBECONFIG=%KUBECONFIG_PATH%"
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                bat "kubectl apply -f %KUBE_DEPLOY_YAML%"
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful!"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
