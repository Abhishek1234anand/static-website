pipeline {
    agent any

    environment {
        IMAGE_NAME = "static-website"
        IMAGE_TAG  = "01"
        REGISTRY   = "abhishek0000111"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout([$class: 'GitSCM',
                  branches: [[name: '*/main']],
                  userRemoteConfigs: [[
                    url: 'https://github.com/Abhishek1234anand/static-website.git',
                    credentialsId: 'github-cred-id'
                  ]]
                ])
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'üõ†Ô∏è Building Docker image...'
                    bat '''
                    echo Building Docker image...
                    docker build -t %REGISTRY%/%IMAGE_NAME%:%IMAGE_TAG% .
                    IF %ERRORLEVEL% NEQ 0 exit /b 1
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'jenkins-pipeline-token', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                    script {
                        echo 'üì¶ Logging in and pushing image to Docker Hub...'
                        bat '''
                        echo Logging in to Docker Hub...
                        docker login -u %DOCKERHUB_USER% -p %DOCKERHUB_PASS%
                        IF %ERRORLEVEL% NEQ 0 exit /b 1

                        echo Pushing Docker image...
                        docker push %REGISTRY%/%IMAGE_NAME%:%IMAGE_TAG%
                        IF %ERRORLEVEL% NEQ 0 exit /b 1

                        docker logout
                        '''
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([file(credentialsId: 'kubeconfig-cred-id', variable: 'KUBECONFIG')]) {
                    script {
                        echo 'üöÄ Deploying to Kubernetes...'
                        bat '''
                        echo Applying Kubernetes deployment...
                        kubectl apply -f k8.yaml
                        IF %ERRORLEVEL% NEQ 0 exit /b 1

                        echo Applying Kubernetes service...
                        kubectl apply -f k8.yaml
                        IF %ERRORLEVEL% NEQ 0 exit /b 1
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed. Check logs for details.'
        }
    }
}
